<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head') %>
    <!-- Local CSS -->
    <link rel="stylesheet" href="/stylesheets/module.css" />
    <link rel="stylesheet" href="/stylesheets/auth.css" />
    <title>noCapReviews</title>
  </head>
  <body class="container-sm mb-5">
    <%- include('../partials/navbar') %> <%- include('../partials/flash') %>
    <div class="row">
      <div class="card text-center bg-dark col-4 offset-4 p-4">
        <div class="card-body">
          <img
            class="mb-3"
            src="https://static-cdn.jtvnw.net/emoticons/v1/301040809/3.0"
            alt="mizkifSit"
          />
          <div class="card-title text-light h2 mb-3" id="login">Log in</div>
          <small class="card-text text-white-50">
            New to noCapReviews?
            <a href="/user/register" class="link-info ms-1">Register here</a>
          </small>
          <form
            class="validated-form"
            action="/user/login"
            method="POST"
            novalidate
          >
            <div class="form-floating my-3">
              <input
                class="form-control"
                type="text"
                id="username"
                name="username"
                placeholder="Username"
                required
              />
              <label class="form-label text-dark" for="username"
                >Username</label
              >
              <div class="invalid-feedback">Please type a username.</div>
            </div>
            <div class="form-floating mb-3">
              <input
                class="form-control"
                type="password"
                id="password"
                name="password"
                placeholder="Password"
                required
              />
              <label class="form-label text-dark" for="password"
                >Password</label
              >
              <div class="invalid-feedback">Please type a password.</div>
            </div>
            <div class="d-grid">
              <button type="submit" class="btn btn-primary">Log in</button>
            </div>
          </form>
        </div>
      </div>
    </div>
    <!-- Bootstrap JS -->
    <script
      src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"
      integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js"
      integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF"
      crossorigin="anonymous"
    ></script>
    <!-- Local Scripts -->
    <script src="/scripts/validate.js"></script>
  </body>
</html>
